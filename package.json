{
  "name": "udeturbo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "predev": "pnpm --filter @repo/config build",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "check": "biome check --write",
    "build": "turbo run build",
    "prestart": "pnpm --filter @repo/config build",
    "start": "NODE_ENV=production turbo run start",
    "start:prod": "NODE_ENV=production pnpm run db:migrate:prod && turbo run start",
    "dev": "NODE_ENV=development pnpm run db:up:dev && pnpm run db:migrate:dev && turbo run dev",
    "api:dev": "NODE_ENV=development pnpm --filter=@repo/api run dev",
    "api:prod": "DOTENV_CONFIG_PATH=./env.production pnpm --filter=@repo/api run start",
    "db:studio:dev": "DOTENV_CONFIG_PATH=./env.development pnpm --filter=@repo/database run db:studio",
    "db:generate:dev": "DOTENV_CONFIG_PATH=./env.development pnpm --filter=@repo/database run db:generate",
    "db:migrate:dev": "DOTENV_CONFIG_PATH=./env.development pnpm --filter=@repo/database run db:migrate",
    "db:studio:prod": "DOTENV_CONFIG_PATH=./env.production pnpm --filter=@repo/database run db:studio",
    "db:generate:prod": "DOTENV_CONFIG_PATH=./env.production pnpm --filter=@repo/database run db:generate",
    "db:migrate:prod": "DOTENV_CONFIG_PATH=./env.production pnpm --filter=@repo/database run db:migrate",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:up:dev": "docker compose --env-file .env.development up -d postgres",
    "db:up:prod": "docker compose --env-file .env.production up -d postgres",
    "compose:up:dev": "docker compose --env-file .env.development up -d",
    "compose:down:dev": "docker compose --env-file .env.development down",
    "compose:up:prod": "docker compose --env-file .env.production up -d",
    "compose:down:prod": "docker compose --env-file .env.production down"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "turbo": "^2.5.4",
    "typescript": "^5.6.3"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "esbuild"
  ]
}
